<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSatrack.Cross.Views.Base.MenuPage"
             Title="spike" BackgroundColor="{StaticResource MeneBackgroundColor}"
             Icon="ic_menu_white_48dp.png">
  <Grid>
    <ListView  x:Name="listView" HasUnevenRows="True">
      <ListView.Header>
        <Grid BackgroundColor="{StaticResource PrimaryColor}" HeightRequest="150">
          <Image Source="material_background2.jpg" Aspect="Fill"></Image>
          <Grid Padding="20">
          <Label Text="spike satrack" TextColor="{StaticResource FontLigthColor}" VerticalOptions="End"></Label>
          </Grid>
        </Grid>        
      </ListView.Header>  
      
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout 
            Orientation="Vertical" Padding="15,5">
              <StackLayout Orientation="Horizontal">
                <Image Source="{Binding image}" />
                <Label Text="{Binding title}"
                TextColor="{StaticResource FontLigthColor}" />
              </StackLayout>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</ContentPage>